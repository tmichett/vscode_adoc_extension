{

	// Snippets for Travis's AsciiDoc Template
	// Used for generating workshops, notes, and webinars
	
		"ASCIIDoc Table": {
			"scope": "asciidoc,adoc",
			"prefix": "adoc_table",
			"body": [
			   ".TABLE NAME",
			   "[cols='1.0a,1.0a,1.0a', options='header']",
			   "|===",
			   "|  Machine name               | IP addresses   | Role",
			   "| bastion.lab.example.com     | 172.25.250.254 | Router link VMs to central servers",
				 "|===",
			],
			"description": "Table",
		},
	
		"ASCIIDoc Bash Source": {
			"scope": "asciidoc,adoc",
			"prefix": "adoc_source",
			"body": [
			   "[source,bash]",
			   "----",
			   "",
			   "----",
			],
			"description": "Source Block",
	},
	
	"ASCIIDoc YAML Source": {
		"scope": "asciidoc,adoc",
		"prefix": "adoc_yml_source",
		"body": [
		   "[source,yml]",
		   "----",
		   "",
		   "----",
		],
		"description": "YAML Source Block",
	},
	
	"Note Admonition Box": {
		"scope": "asciidoc, adoc",
		"prefix": "adoc_note",
		"body": [
		   "[NOTE]",
		   "======",
		   "Note Text Goes HERE",
		   "======",
		],
		"description": "Note Box"
	},
	
	
	"Warning Admonition Box": {
		"scope": "asciidoc, adoc",
		"prefix": "adoc_warning",
		"body": [
		   "[WARNING]",
		   "======",
		   "Warning Text Goes HERE",
		   "======",
		],
		"description": "Warning Box"
	},
	
	
	"Tip Admonition Box": {
		"scope": "asciidoc, adoc",
		"prefix": "adoc_tip",
		"body": [
		   "[TIP]",
		   "======",
		   "TIP Text Goes HERE",
		   "======",
		],
		"description": "Tip Box"
	},
	
	
	"Caution Admonition Box": {
		"scope": "asciidoc, adoc",
		"prefix": "adoc_caution",
		"body": [
		   "[CAUTION]",
		   "======",
		   "Caution Text Goes HERE",
		   "======",
		],
		"description": "Caution Box"
	},
	
	"Important Admonition Box": {
		"scope": "asciidoc, adoc",
		"prefix": "adoc_important",
		"body": [
		   "[IMPORTANT]",
		   "======",
		   "IMPORTANT Text Goes HERE",
		   "======",
		],
		"description": "Important Box"
	},
	
	
	"Image Template": {
		"scope": "asciidoc",
		"prefix": "adoc_image",
		"body": [
		   "image::AnsibleTower-Classroom-Architecture.png[title='DO447 Classroom Layout', align='center']"
		],
		"description": "Important Templage"
	},
	
	"Github Formatting": {
		"scope": "asciidoc",
		"prefix": "adoc_gh_doc",
		"body": [
			"ifndef::env-github[:icons: font]",
			"ifdef::env-github[]",
			":status:",
			":outfilesuffix: .adoc",
			":caution-caption: :fire:",
			":important-caption: :exclamation:",
			":note-caption: :paperclip:",
			":tip-caption: :bulb:",
			":warning-caption: :warning:",
			"endif::[]",
		],
		"description": "Github Documentation Formatting"
	},	

	
